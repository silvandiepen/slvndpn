{
	"name": "silvandiepen",
	"version": "1.0.0",
	"description": "Sil van Diepen",
	"author": "Sil van Diepen",
	"private": true,
	"scripts": {
		"dev": "sh scripts/dev.sh",
		"dev:local": "sh scripts/devlocal.sh",
		"dev:staging": "sh scripts/staging.sh",
		"dev:production": "sh scripts/production.sh",
		"lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
		"lint:fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix",
		"precommit": "lint && stylelint",
		"generate": "nuxt generate",
		"generate:develop": "cp ./config/develop.js ./config/latest.js && nuxt generate",
		"generate:staging": "cp ./config/staging.js ./config/latest.js && nuxt generate",
		"generate:production": "cp ./config/production.js ./config/latest.js && nuxt generate",
		"stylelint": "stylelint '**/*.vue' '**/*.scss'",
		"stylelint:fix": "stylelint '**/*.vue' '**/*.scss' --fix"
	},
	"dependencies": {
		"@nuxtjs/axios": "^5.4.1",
		"@nuxtjs/google-analytics": "^2.2.0",
		"@nuxtjs/pwa": "^3.0.0-beta.19",
		"@octokit/rest": "^16.36.0",
		"@sil/markdown": "^1.0.1",
		"nuxt": "^2.8.1",
		"vue-async-computed": "^3.8.2"
	},
	"devDependencies": {
		"nuxt-rfg-icon": "^0.6.3",
		"henris": "^1.2.0",
		"@henris/custom": "^0.0.2",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-config-prettier": "^4.1.0",
		"eslint-friendly-formatter": "^4.0.1",
		"eslint-loader": "^2.1.1",
		"eslint-plugin-vue": "^5.2.2",
		"eslint-plugin-prettier": "^3.0.0",
		"stylelint": "^9.10.1",
		"stylelint-logical-order": "^0.0.5",
		"stylelint-order": "^2.2.0",
		"guyn": "*",
		"silicons": "*",
		"sass": "^1.22.9",
		"sass-loader": "^7.1.0"
	},
	"browserslist": [
		"last 2 versions",
		"not dead"
	],
	"stylelint": {
		"rules": {
			"at-rule-no-unknown": [
				true,
				{
					"ignoreAtRules": [
						"if",
						"for",
						"else",
						"each",
						"mixin",
						"extend",
						"include",
						"content",
						"at-root",
						"function"
					]
				}
			],
			"order/order": [
				"custom-properties",
				"dollar-variables",
				"declarations",
				"rules"
			],
			"indentation": "tab"
		},
		"extends": [
			"stylelint-logical-order"
		]
	}
}
